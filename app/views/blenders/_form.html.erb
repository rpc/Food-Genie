<%= form_for(@blender) do |f| %>
  <% if @blender.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blender.errors.count, "error") %> prohibited this blender from being saved:</h2>

      <ul>
      <% @blender.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>  
  <div class="field">
    <%= f.label :blending_ingredients %><br />
    <%= f.text_area :blending_ingredients, {:cols => 60, :rows => 10} %>
  </div>
  <div class="field">
    <%= f.label :blending_text %><br />
    <%= f.text_area :blending_text, {:cols => 60, :rows => 10} %>
  </div>
  <div class="field">
    <%= f.label :difficulty %><br />
    easy<%= f.radio_button :difficulty, "easy", :checked => true%>
    medium<%= f.radio_button :difficulty, "medium" %>
    hardcore<%= f.radio_button :difficulty, "hardcore" %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    dessert<%= f.radio_button :category, 1 %>
    dish<%= f.radio_button :category, 2, :checked => true %>
    entrance<%= f.radio_button :category, 3 %>
  </div>  
  <div class="field">
    <%= f.label :time %><br />
    <%= f.number_field :time %>
  </div>
  <div class="field">
    <%= f.label :many_ppl %><br />
    <%= f.number_field :many_ppl %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
