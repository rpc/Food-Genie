<p id="notice"><%= notice %></p>

<p>
  <b>Many ppl:</b>
  <%= @recipe.many_ppl %>
</p>

<p>
  <b>Title:</b>
  <%= @recipe.title %>
</p>

<p>
  <b>Difficulty:</b>
  <%= @recipe.difficulty %>
</p>

<p>
  <b>Time:</b>
  <%= @recipe.time %>
</p>

<p>
  <b>Category:</b>
  <%= @recipe.category.name %>
</p>

<p>
  <b>Text:</b>
  <%= @recipe.text %>
</p>

<p>
  <b>Extra content:</b>
  <%= @recipe.extra_content %>
</p>

<p>
  <b>Ingredients:</b>
  <% @recipe.ingredients.each do |ingredient| %>
    <p>- <%=  ingredient.quantity %> <%=  ingredient.measure %> <%= ingredient.food_item.name %></p>
  <% end %>
</p>


<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
